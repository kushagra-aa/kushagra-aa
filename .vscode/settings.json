{
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
    },
    "eslint.validate": [
        "javascript",
        "typescript",
        "typescriptreact",
        "javascriptreact"
    ],
    "stylelint.validate": [
        "css",
        "less",
        "postcss"
    ],
    "eslint.workingDirectories": [
        {
            "directory": "front-end"
        }
    ],
    "stylelint.configFile": "front-end/.stylelintrc",
    "prettier.configPath": "front-end/.prettierrc",
    "editor.formatOnSave": true,
    "scss.validate": false,
    "css.validate": false,
    "postcss.validate": false,
    "cSpell.words": [
        "behance",
        "flexbox",
        "flexbugs",
        "stylelint"
    ],
    "files.associations": {
        "*.css": "postcss"
    }
}