{
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.organizeImports": true,
    },
    "eslint.validate": [
        "javascript",
        "typescript",
        "typescriptreact",
        "javascriptreact"
    ],
    "eslint.workingDirectories": [
        {
            "directory": "front-end"
        }
    ],
    "editor.formatOnSave": true,
    "scss.validate": false,
    "css.validate": false,
    "postcss.validate": false,
    "cSpell.words": [
        "flexbox",
        "flexbugs",
        "stylelint"
    ]
}